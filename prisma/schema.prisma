generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id             String      @id @default(uuid())
  clerkUserId    String
  title          String
  description    String?
  publicId       String
  secureUrl      String
  duration       Int?
  originalSize   Int?
  compressedSize Int?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  compressedUrl  String?
  status         VideoStatus @default(PENDING)
}

enum VideoStatus {
  PENDING
  PROCESSING
  COMPLETE
  FAILED
}

model Feedback {
  id        String   @id @default(uuid())
  name      String?
  email     String
  message   String
  createdAt DateTime @default(now())
}

model EnterpriseLead {
  id           String   @id @default(uuid())
  company      String
  email        String
  requirements String
  createdAt    DateTime @default(now())
}



